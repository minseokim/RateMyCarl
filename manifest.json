{
  "name": "RateMyCarl",
  "version": "0.0.1",
  "manifest_version": 2,
  "author": "Alex Kim",
  "description": "Register more efficiently on The Hub with ratings from RateMyProfessors.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "http://www.ratemyprofessors.com/*",
    "tabs"
  ],
  "background": {
    "scripts": "src/bg/background.js",
    "persistent": false
  },
  "page_action": {
    "default_icon": "icons/icon48.png",
  },
  "content_scripts": [
    {
      "matches": ["https://apps.carleton.edu/campus/registrar/schedule/enroll/*", "https://thehub.carleton.edu/WebAdvisor/*"],
      "css": ["css/styles.css"],
      "js": ["js/main.js"]
    }
  ]
}